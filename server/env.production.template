# Production Environment Variables for Resume Checker Backend
# Copy this to .env and fill in your actual API keys

# ===== SERVER CONFIGURATION =====
PORT=10000
CORS_ORIGIN=https://your-app-name.vercel.app

# ===== FEATURE TOGGLES =====
ENABLE_RESUME_ANALYSIS=true
ENABLE_ATS_SCORING=true
ENABLE_CONTENT_IMPROVEMENT=true
ENABLE_CHAT_ASSISTANT=true
ENABLE_JOB_SEARCH=true

# ===== DATABASE =====
DATABASE_URL=./data/production.db

# ===== AI CONFIGURATION (GROQ - RECOMMENDED) =====
AI_PROVIDER=groq
AI_MODEL=llama3-8b-8192
GROQ_API_KEY=your_actual_groq_api_key_here

# ===== FUNCTION-SPECIFIC AI MODELS =====
AI_PROVIDER_RESUME=groq
AI_MODEL_RESUME=llama3-8b-8192

AI_PROVIDER_ATS=groq
AI_MODEL_ATS=llama3-8b-8192

AI_PROVIDER_IMPROVEMENT=groq
AI_MODEL_IMPROVEMENT=llama3-8b-8192

AI_PROVIDER_CHAT=groq
AI_MODEL_CHAT=llama3-8b-8192

AI_PROVIDER_JOBSEARCH=groq
AI_MODEL_JOBSEARCH=llama3-8b-8192

# ===== ALTERNATIVE AI PROVIDERS (Uncomment if needed) =====
# OpenAI
# OPENAI_API_KEY=your_openai_api_key_here
# AI_PROVIDER=openai
# AI_MODEL=gpt-3.5-turbo

# Anthropic
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# AI_PROVIDER=anthropic
# AI_MODEL=claude-3-haiku-20240307

# ===== PRICING CONFIGURATION =====
PRICE_INR=49
PREMIUM_MODEL_UPCHARGE=20
ULTRA_MODEL_UPCHARGE=50

# ===== RATE LIMITING =====
MAX_REQUESTS_PER_HOUR=100
MAX_REQUESTS_PER_DAY=1000

# ===== USER TIER LIMITS =====
FREE_TIER_LIMIT=1
PREMIUM_TIER_LIMIT=100
UNLIMITED_TIER_LIMIT=999999

# ===== PAYMENT CONFIGURATION =====
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here
