# Server Configuration
PORT=4000
NODE_ENV=production

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.vercel.app,https://www.your-frontend-domain.vercel.app

# Database Configuration
DB_PATH=./data/resume_checker.db

# AI Service Configuration
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Admin Access Configuration (REQUIRED for production monitoring)
ENABLE_DEMO_MODE=true
DEMO_API_KEY=your_demo_key_here
ADMIN_API_KEY=your_admin_key_here

# Payment Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_BASE_URL=https://api-m.sandbox.paypal.com

# Email Service Configuration (for OTP)
GMAIL_APP_PASSWORD=your_gmail_app_password_here
# Note: Use Gmail App Password, not your regular Gmail password
# To generate: https://myaccount.google.com/apppasswords

# App Configuration
APP_URL=https://your-frontend-domain.vercel.app

# Production Database Path (Render specific)
# This ensures data persistence between deployments
DB_PERSISTENT_PATH=/opt/render/project/src/data/resumes.db
